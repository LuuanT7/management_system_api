{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": [
      "node"
    ],
    // "typeRoots": [
    //   "./src/@types",
    //   "./node_modules/@types/node"
    // ],
    "lib": [
      "esnext",
      "es6"
    ],
    "paths": {
      "@prisma/*": [
        "prisma/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  //add posterior
  "strict": true,
  "strictPropertyInitialization": false,
  "allowJs": true
}